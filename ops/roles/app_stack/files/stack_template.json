{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Face Detection App Stack",
  "Parameters": {
    "BucketName": {
      "Type": "String",
      "Description": "Name of main S3 Bucket"
    },
    "IdentityPoolId": {
      "Type": "String",
      "Description": "Cognito Identity Pool Id"
    },
    "S3AccessPolicyName": {
      "Type": "String",
      "Description": "S3 Access Policy Name"
    },
    "SyncAccessPolicyName": {
      "Type": "String",
      "Description": "Sync Access Policy Name"
    },
    "DBAccessPolicyName": {
      "Type": "String",
      "Description": "DB Access Policy Name"
    },
    "SnapshotDBTableName": {
      "Type": "String",
      "Description": "Snapshot DB Table Name"
    },
    "ResourcesCounterDBTableName": {
      "Type": "String",
      "Description": "Resources Counter DB Table Name"
    },
    "SnapshotDBIndexName": {
      "Type": "String",
      "Description": "Snapshot DB Index Name"
    }
  },
  "Resources": {
    "ResultsBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Ref": "BucketName"
        },
        "AccessControl": "PublicRead"
      }
    },
    "SnapshotDB": {
      "Type" : "AWS::DynamoDB::Table",
      "Properties" : {
        "TableName" : { "Ref": "SnapshotDBTableName" },
        "KeySchema" :  [
          {
            "AttributeName" : "id",
            "KeyType" : "HASH"
          }
        ],
        "AttributeDefinitions" : [
          {
            "AttributeName" : "id",
            "AttributeType" : "S"
          },
          {
            "AttributeName" : "cameraid",
            "AttributeType" : "S"
          },
          {
            "AttributeName" : "unixtimestamp",
            "AttributeType" : "N"
          }
        ],
        "GlobalSecondaryIndexes" : [{
          "IndexName" : { "Ref": "SnapshotDBIndexName" },
          "KeySchema" : [
            {
              "AttributeName" : "cameraid",
              "KeyType" : "HASH"
            },
            {
              "AttributeName" : "unixtimestamp",
              "KeyType" : "RANGE"
            }
          ],
          "Projection" : {
            "NonKeyAttributes" : [],
            "ProjectionType" : "ALL"
          },
          "ProvisionedThroughput" : {
            "ReadCapacityUnits" : "5",
            "WriteCapacityUnits" : "5"
          }
        }],
        "ProvisionedThroughput" : {
          "ReadCapacityUnits" : "5",
          "WriteCapacityUnits" : "5"
        }
      }
    },
    "ResourcesCounterDB": {
      "Type" : "AWS::DynamoDB::Table",
      "Properties" : {
        "TableName" : { "Ref": "ResourcesCounterDBTableName" },
        "KeySchema" : [
          {
            "AttributeName" : "id",
            "KeyType" : "HASH"
          }
        ],
        "AttributeDefinitions" : [
          {
            "AttributeName" : "id",
            "AttributeType" : "S"
          }
        ],
        "ProvisionedThroughput" : {
          "ReadCapacityUnits" : "5",
          "WriteCapacityUnits" : "5"
        }
      }
    },
    "UnAuthRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Federated": "cognito-identity.amazonaws.com"
              },
              "Action": "sts:AssumeRoleWithWebIdentity",
              "Condition": {
                "StringEquals": {
                  "cognito-identity.amazonaws.com:aud": { "Ref": "IdentityPoolId" }
                },
                "ForAnyValue:StringLike": {
                  "cognito-identity.amazonaws.com:amr": "unauthenticated"
                }
              }
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": { "Ref": "S3AccessPolicyName" },
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Sid": "Stmt1452497104000",
                  "Effect": "Allow",
                  "Action": [
                    "s3:PutObject",
                    "s3:PutObjectAcl"
                  ],
                  "Resource": [{
                    "Fn::Join": [
                      "", ["arn:aws:s3:::", { "Ref": "BucketName" }, "/input/*"]
                    ]
                  }]
                }
              ]
            }
          },
          {
            "PolicyName" : { "Ref": "DBAccessPolicyName" },
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Sid": "Stmt1452497255000",
                  "Effect": "Allow",
                  "Action": [
                    "dynamodb:GetItem",
                    "dynamodb:Query"
                  ],
                  "Resource": [
                    {
                      "Fn::Join": [ "",
                                    [
                                      "arn:aws:dynamodb:",
                                      { "Ref": "AWS::Region" }, ":",
                                      { "Ref": "AWS::AccountId" }, ":",
                                      { "Ref": "SnapshotDB" }
                                    ]
                                  ]
                    },
                    {
                      "Fn::Join": [ "",
                                    [
                                      "arn:aws:dynamodb:",
                                      { "Ref": "AWS::Region" }, ":",
                                      { "Ref": "AWS::AccountId" }, ":",
                                      { "Ref": "SnapshotDB" }, "/",
                                      { "Ref": "SnapshotDBIndexName"}
                                    ]
                                  ]
                    },
                    {
                      "Fn::Join": [ "",
                                    [
                                      "arn:aws:dynamodb:",
                                      { "Ref": "AWS::Region" }, ":",
                                      { "Ref": "AWS::AccountId" }, ":",
                                      { "Ref": "ResourcesCounterDB" }
                                    ]
                                  ]
                    }
                  ]
                }
              ]
            }
          },
          {
            "PolicyName": { "Ref": "SyncAccessPolicyName" },
            "PolicyDocument" : {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "mobileanalytics:PutEvents",
                    "cognito-sync:*"
                  ],
                  "Resource": [
                    "*"
                  ]
                }
              ]
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "MyStacksRegion": {
      "Value": {
        "Ref": "AWS::Region"
      }
    }
  }
}
